{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "watch": "webpack --config ui/webpack.config.js --watch",
    "build": "webpack --config ui/webpack.config.js --mode production",
    "test": "jest",
    "apollo-codegen": "apollo schema:download --endpoint=http://host.docker.internal:8000/query schema.json && apollo codegen:generate --schema=schema.json --queries=ui/src/**/*.tsx --target=typescript"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "apollo-cache-inmemory": "^1.2.5",
    "apollo-client": "^2.3.5",
    "apollo-link": "^1.2.2",
    "apollo-link-error": "^1.1.0",
    "apollo-link-http": "^1.5.4",
    "g": "^2.0.1",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.9.2",
    "node-gyp": "^6.0.0",
    "react": "^16.10.2",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.4.1",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.0.6",
    "@types/react-router": "^5.1.2",
    "@types/react-router-dom": "^5.1.0",
    "apollo": "^2.20.0",
    "css-loader": "^3.2.0",
    "file-loader": "^4.2.0",
    "jest": "^24.9.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.9.2",
    "sass-loader": "^8.0.0",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.0.8"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "ui/tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.(test|spec).+(ts|tsx|js)"
    ]
  }
}
